    "\n",
    "\n",
    "class Account:\n",
    "    account_count = 0  \n",
    "    import random\n",
    "\n",
    "    def __init__(self, name, balance):\n",
    "        self.name = name    \n",
    "        self.balance = balance\n",
    "        self.bankname = \"SC은행\"\n",
    "        self.account_num = self.get_account_number() \n",
    "        self.deposit_count = 0\n",
    "\n",
    "    def get_account_number(self): \n",
    "        num1 = random.randint(100, 999)\n",
    "        num2 = random.randint(10, 99)\n",
    "        num3 = random.randint(100000, 999999)\n",
    "        self.account_num = f\"{num1}-{num2}-{num3}\"\n",
    "        print(f\"{self.name}의 계좌, 생성된 계좌번호: {self.account_num}\")\n",
    "        return self.account_num \n",
    "\n",
    "    def deposit(self, amount):\n",
    "        if amount >= 1:\n",
    "            self.balance += amount\n",
    "            self.deposit_count += 1\n",
    "            print(f\"{amount}원이 입금되었습니다. 현재 잔액은 {self.balance}원입니다.\")\n",
    "        \n",
    "        if self.deposit_count % 5 ==0:\n",
    "            interest = int(self.balance * 0.01)\n",
    "            self.balance += interest\n",
    "            print(f\"{self.deposit_count}번째 입금입니다. 현재 잔액 대비 총 이자는 {interest}가 지급되었습니다. 현재 잔액은 {self.balance}원 입니다.\")\n",
    "        \n",
    "        else:\n",
    "            print(f\"{self.deposit_count}번째 입금입니다.\")\n",
    "\n",
    "    def withdraw(self, amount):\n",
    "        if amount > self.balance:\n",
    "            print(\"잔액이 부족합니다. 출금할 수 없습니다.\") \n",
    "        else:\n",
    "            self.balance -= amount \n",
    "            print(f\"{amount}원이 출금되었습니다. 현재 잔액은 {self.balance}원입니다.\") \n",
    "\n",
    "    def display_info(self):\n",
    "        print(f\"은행이름: {self.bankname}, 예금주: {self.name}, 계좌번호: {self.account_num}, 잔고: {self.balance}원\")\n",
    "        "
   ]
